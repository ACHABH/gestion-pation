<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_medical" model="ir.module.category">
            <field name="name">Gestion Médicale</field>
            <field name="description">Gestion des patients, médecins, prescriptions et rendez-vous</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_medical_secretary" model="res.groups">
            <field name="name">Secrétaire</field>
            <field name="category_id" ref="module_category_medical"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Accès en lecture aux prescriptions, création/modification des rendez-vous</field>
        </record>

        <record id="group_medical_doctor" model="res.groups">
            <field name="name">Médecin</field>
            <field name="category_id" ref="module_category_medical"/>
            <field name="implied_ids" eval="[(4, ref('group_medical_secretary'))]"/>
            <field name="comment">Accès complet aux prescriptions et médicaments</field>
        </record>

        <record id="group_medical_admin" model="res.groups">
            <field name="name">Administrateur médical</field>
            <field name="category_id" ref="module_category_medical"/>
            <field name="implied_ids" eval="[(4, ref('group_medical_doctor'))]"/>
            <field name="comment">Accès complet à tous les modèles</field>
        </record>

    </data>
</odoo>
